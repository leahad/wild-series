{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>Programs</th>
                {% for program in actor.programs %}
                    <td><a href="{{ path("program_show", { id: program.id }) }}"> {{ program.title }} </a></td>
                {% else %}
                    <td>no programs for this actor</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_actor_index') }}">back to list</a>

    <a href="{{ path('app_actor_edit', {'id': actor.id}) }}">edit</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
