{% extends 'base.html.twig' %}

{% block title %}Edit comment{% endblock %}

{% block body %}
    <h1>Edit comment</h1>

    {{ include('program/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('program_episode_show',{ slug: program.slug, season: season.id, episode: episode.id}) }}">back to list</a>

    <form method="post" action="{{ path('comment_delete', {'comment': comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="btn">Delete</button>
</form>
{% endblock %}
