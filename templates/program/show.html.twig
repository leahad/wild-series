{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
<div class="media">
    <img class="align-self-start mr-3" src="{{ vich_uploader_asset(program) }}" alt="{{ program.title }}">
    <div class="media-body">
        <h1 class="mt-0"> {{ program.title }} </h1>
        <p>{{ program.synopsis }}</p>
        <p>category : {{ program.category.name }}</p>
        <p>duration : {{ programDuration }}</p>
        <ul>
            {% for season in program.seasons %}
                <li><a href="{{ path("program_season_show", { slug: program.slug, season: season.id }) }}"> Season {{ season.number }} </a></li>
            {% else %}
                no season found
        {% endfor %}
        </ul>

        <strong>Actors :</strong>
        <ul>
            {% for actor in program.actors %}
                <li> <a href="{{ path('app_actor_show', {id: actor.id}) }}"> {{ actor.name }} </a></li> 
            {% else %}
                <li>Aucun acteur pour cette s√©rie</li>
            {% endfor %}
        </ul>
    </div>
</div>

    <a href="{{ path("program_edit", { slug: program.slug }) }}">edit</a>

    <a href="{{ path('program_index') }}">
        Back to the programs list
    </a>
{% endblock %}