{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Every TV shows</h1>
    {% for program in programs %}
        <div>
            <h2> {{ loop.index}} / {{ program.title}} - Category: {{ program.category.name }}</h2>
            <p>{{ program.synopsis }}</p>
            <a href="{{ path("program_show", { id: program.id }) }}"> see more </a>
        </div>
    {% else %}
        no TV shows found
    {% endfor %}

        <a href="{{ path('program_new') }}">Create new</a>
        
        <a href="{{ path('app_index') }}">
        Back to the hompage
    </a>
{% endblock %}