{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello!</h1>
    <h3>Fill the form to login or click <a href="{{ path('app_register')}}">here</a> to register</h3>

    <form action="{{ path('app_login') }}" method="post">
        <div class="form-group row">
            <label class="form-label mt-4" for="username">Email:</label>
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}">
        </div>
        <div class="form-group row">
            <label class="form-label mt-4" for="password">Password:</label>
            <input type="password"  class="form-control" id="password" name="_password">
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="badge bg-dark mt-4">login</button>
    </form>

</div>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

{% endblock %}
